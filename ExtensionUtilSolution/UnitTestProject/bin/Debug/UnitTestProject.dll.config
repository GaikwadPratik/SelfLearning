<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="ApplicationCustomLog" type="LogUtils.ApplicationLogSection, LogUtils"/>
    <section name="EmailUtilCustomLog" type="EmailUtils.EmailUtilSection, EmailUtils"/>
  </configSections>

  <ApplicationCustomLog writeLog ="true">
    <logFileLocation location="" fileName="test_0" extension="txt"></logFileLocation>
    <appendToFile appendLine="true"></appendToFile>
    <maxFileSize size="5"></maxFileSize>
    <debugLevel level="DEBUG"></debugLevel>
  </ApplicationCustomLog>
  <EmailUtilCustomLog sendEmail="true">
    <emailFromUser userName="no-reply@happyhut.in" passWord="No_reply@1234" fromDisplayName="No-Reply HappyHut"></emailFromUser>
    <emailConfiguration host="smtp.zoho.com" port="465" enableSSL="true" includeAttachment="false"></emailConfiguration>
  </EmailUtilCustomLog>
</configuration>